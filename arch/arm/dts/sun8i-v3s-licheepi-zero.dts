/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"

/ {
	model = "Lichee Pi Zero";
	compatible = "licheepi,licheepi-zero", "allwinner,sun8i-v3s";

	aliases {
        ethernet0 = &emac;
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	 backlight: backlight {
        compatible = "pwm-backlight";
        pwms = <&pwm 0 50000 0>;
        brightness-levels = <0 2 4 8 16 32 64 128 255>;
        default-brightness-level = <7>;
    };

    leds {
		compatible = "gpio-leds";

		blue_led {
			label = "licheepi:blue:usr";
			gpios = <&pio 6 1 GPIO_ACTIVE_LOW>; /* PG1 */
		};

		green_led {
			label = "licheepi:green:usr";
			gpios = <&pio 6 0 GPIO_ACTIVE_LOW>; /* PG0 */
			default-state = "on";
		};

		red_led {
			label = "licheepi:red:usr";
			gpios = <&pio 6 2 GPIO_ACTIVE_LOW>; /* PG2 */
		};
	};

    panel-rgb@0 {
        compatible = "simple-panel";
        backlight = <&backlight>;
        data-mapping = "vesa-16";
        display-timings {
            timing@0 {
                /*480*272*/
                // clock-frequency = <50000000>;
                // hactive = <480>;
                // vactive = <272>;
                // hfront-porch = <2>;
                // hback-porch = <2>;
                // hsync-len = <41>;
                // vfront-porch = <2>;
                // vback-porch = <2>;
                // vsync-len = <10>;

                /*800*480*/
                clock-frequency = <33000000>;
                hactive = <800>;
                vactive = <480>;
                hfront-porch = <209>;
                hback-porch = <45>;
                hsync-len = <1>;
                vfront-porch = <22>;
                vback-porch = <22>;
                vsync-len = <1>;


                /*1024*600*/
                // clock-frequency = <45000000>;
                // hactive = <1024>;
                // vactive = <600>;
                // hfront-porch = <176>;
                // hback-porch = <88>;
                // hsync-len = <5>;
                // vfront-porch = <20>;
                // vback-porch = <25>;
                // vsync-len = <5>;
                hsync-active = <0>;
                vsync-active = <0>;
                de-active = <0>;
                pixelclk-active = <1>;
                bits-per-pixel = <16>;
            };
        };
    };
};


&emac {
    phy-handle = <&int_mii_phy>;
    phy-mode = "mii";
    allwinner,use-internal-phy;
    allwinner,leds-active-low;
    status = "okay";
};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&spi0 {
    status = "disabled";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	phys = <&usbphy>;
    extcon = <&usbphy>;
	status = "okay";
};
&ehci0 {
    status = "okay";
};

&ohci0 {
    status = "okay";
};

&pwm {
    pinctrl-names = "default";
    pinctrl-0 = <&pwm0_pin>;
    status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	#phy-cells = <0>;
	status = "okay";
};
